{
  "compilerOptions": {
    // 1. FILE LAYOUT (Keep these as set before)
    "rootDir": ".", 
    "outDir": "./dist", 

    // 2. ENVIRONMENT SETTINGS
    "module": "CommonJS", 
    "target": "ES2022", 
    
    // Add "DOM" to the lib array
    "lib": ["ES2022", "DOM"], 
    
    "types": ["node", "electron"], 
    
    // ... other settings ...
    
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", 

    "strict": true, 
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
  },
  
  "include": ["main.ts", "preload.ts", "login.ts"] 
}